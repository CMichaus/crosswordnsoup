    static int c = 0;

    private void comprobar() {
                String vPalabra;
                String Palabra1 = "grafico";
                String Palabra2 = "bisectriz";
                String Palabra3 = "puntofijo";
                vPalabra = jTextField1.getText();
                System.out.println("Palabra:" + vPalabra);

                if (vPalabra.equals(Palabra1)) {
                    check(1); 

                    bandera = 1;
                    System.out.println(bandera);
                } else if (vPalabra.equals(Palabra2)) {
                    check(2);

                    bandera = 2;
                    System.out.println(bandera);

                } else if (vPalabra.equals(Palabra3)) {
                    check(3);
                    bandera = 3;
                    System.out.println(bandera);
                } else if (found != 1 && found != 2 && found != 3) {
                    found = 4;
                    //JOptionPane.showMessageDialog(null, "Palabra Incorrecta");
                }

            }

        
    

    private void check(int found) {
        switch (found) {
            case 1:
                JOptionPane.showMessageDialog(null, "Palabra correcta");

                lblCrucigrama1.setVisible(false);
                lblCrucigrama1.setIcon(new javax.swing.ImageIcon(getClass().getResource("/imagenes/grafico.png")));
                lblCrucigrama1.setVisible(true);
                found = 0;
                break;
            case 2:
                JOptionPane.showMessageDialog(null, "Palabra correcta");

                lblCrucigrama1.setVisible(false);
                lblCrucigrama1.setIcon(new javax.swing.ImageIcon(getClass().getResource("/imagenes/bisectriz.png")));
                lblCrucigrama1.setVisible(true);
                jTextField1.setText("");
                found = 0;
                break;
            case 3:
                JOptionPane.showMessageDialog(null, "Palabra correcta");

                lblCrucigrama1.setVisible(false);
                lblCrucigrama1.setIcon(new javax.swing.ImageIcon(getClass().getResource("/imagenes/puntofijo.png")));
                lblCrucigrama1.setVisible(true);
                jTextField1.setText("");
                found = 0;
                break;
            case 4:
                JOptionPane.showMessageDialog(null, "Palabra incorrecta");
                jTextField1.setText("");
                found = 0;
            default:
                System.out.println("Error en Switch");
                found = 0;

                break;
        }
    }
    ////////////////////CONTADOR//////////////////////////////////
    
    

    public void relog() {
        for (c = 60; c <= 0; c--) {
            retraso();
            displayReloj.setText("" + c);
        }
    }

    private void retraso() {                 //retrasa el proceso
        try {
            Thread.sleep(4000);
        } catch (InterruptedException e) {
            return;
        }
    }
}
